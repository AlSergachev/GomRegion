<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--_________________Text styles______________________________________-->
    <style name="MyTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GridLayoutTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!--_________________Image styles______________________________________-->

    <style name="GridLayoutImageStyle">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>